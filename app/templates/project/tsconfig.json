{
    "compilerOptions": {
        "baseUrl": "./",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "jsx": "preserve",
        "listFiles": true,
        "target": "es5",
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "dom"
        ],
        "downlevelIteration": true
    },
    "include": [
        "bankConfig/**/*.ts",
        "customSrc/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}